<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/googleDrawer"
    style="@style/AppTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/nav_drawer_bg_color">

    <RelativeLayout
        android:id="@+id/navigationHeader"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/header_logo"
        android:backgroundTint="?attr/logo_overlay"
        android:backgroundTintMode="multiply">

        <TextView
            android:id="@+id/textTitle"
            fontPath="fonts/MilasianCircaBoldPERSONAL.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30.0px"
            android:layout_marginTop="60.0px"
            android:lineSpacingExtra="-8dp"
            android:text="Rom\n  Control"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff"
            android:textSize="45sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="#55000000">

            <TextView
                android:id="@+id/textView"
                fontPath="fonts/MilasianCircaBoldPERSONAL.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15.0px"
                android:gravity="center_vertical"
                android:text="Settings"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffffffff"
                android:textSize="30sp" />
        </RelativeLayout>

    </RelativeLayout>


    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/navigationHeader"
        android:layout_marginBottom="1dp"
        android:background="#1f000000" />

    <android.support.v7.widget.RecyclerView android:id="@+id/drawerList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/separator"
        android:clickable="true"
        android:scrollbars="vertical" />
</RelativeLayout>

